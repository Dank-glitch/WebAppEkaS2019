@model IEnumerable<WebAppEkaS2019.Models.Products>

@{
    ViewBag.Title = "ProdCards";
}
<h2>ProdCards</h2>
<div class="container-fluid">
    @foreach (var tuote in Model)
    {
        <div class="kelluu">
            <div class="card">
                <h5 class="card-title">@tuote.ProductName</h5>
                <img style="height: 200px; display: block;" src="@tuote.ImageLink" alt="Kuva" />
                <button type="button" class="btn btn-primary">Lisää</button>
                <button type="button" class="btn btn-danger">Poista</button>
                <button type="button" class="btn btn-warning">Muokkaa</button>
            </div>

        </div>

    }
</div>
